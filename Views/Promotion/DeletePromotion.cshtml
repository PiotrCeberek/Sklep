@model Projekt.Models.Promotion

@{
    ViewData["Title"] = "Delete Promotion";
}

<h1>Delete Promotion</h1>

<h3>Are you sure you want to delete this promotion?</h3>

<div>
    <h4>Promotion Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Product</dt>
        <dd class="col-sm-10">@Model.Product?.Name</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Discount</dt>
        <dd class="col-sm-10">@Model.Discount%</dd>
        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDateTime.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDateTime.ToString("yyyy-MM-dd")</dd>
    </dl>

    <form asp-action="DeletePromotion" method="post">
        <input type="hidden" asp-for="PromotionId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ManagePromotions" class="btn btn-secondary">Cancel</a>
    </form>
</div>