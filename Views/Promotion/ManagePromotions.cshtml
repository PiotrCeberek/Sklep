@model IEnumerable<Projekt.Models.Promotion>

@{
    ViewData["Title"] = "Manage Promotions";
}

<h1>Manage Promotions</h1>

<p>
    <a asp-action="AddPromotion" class="btn btn-primary">Add New Promotion</a>
</p>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Promotion Name</th>
                <th>Discount (%)</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var promotion in Model)
            {
                <tr>
                    <td>@promotion.Product?.Name</td>
                    <td>@promotion.Name</td>
                    <td>@promotion.Discount%</td>
                    <td>@promotion.StartDateTime.ToString("yyyy-MM-dd")</td>
                    <td>@promotion.EndDateTime.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="EditPromotion" asp-route-id="@promotion.PromotionId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="DeletePromotion" asp-route-id="@promotion.PromotionId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No active promotions found.</p>
}

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to Home</a>
</div>