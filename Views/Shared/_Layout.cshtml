<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Strona główna</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Index">Panel administracyjny</a>
                            </li>
                        }
                        @if (User.IsInRole("Employee"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Employee" asp-action="Dashboard">Panel pracownika</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Shop" asp-action="Index">Sklep</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Shop" asp-action="Favorites">
                                <i class="bi bi-heart"></i> Ulubione
                                <span class="badge bg-success" id="favorites-count">@(ViewData["FavoritesCount"] ?? "0")</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Shop" asp-action="Cart">
                                <i class="bi bi-cart"></i> Koszyk
                                <span class="badge bg-success" id="cart-count">@(ViewData["CartCount"] ?? "0")</span>
                            </a>
                        </li>
                    </ul>

                    <form asp-controller="Waluty" asp-action="Index" method="post">
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="currencyDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @("Waluta: " + (Context.Session.GetString("WybranaWaluta") ?? "Wybierz")) <i class="bi bi-list"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="currencyDropdown">
                                    <li><button type="submit" name="waluta" value="PLN" class="dropdown-item">PLN - Polski Złoty</button></li>
                                    <li><button type="submit" name="waluta" value="USD" class="dropdown-item">USD - Dolar Amerykański</button></li>
                                    <li><button type="submit" name="waluta" value="EUR" class="dropdown-item">EUR - Euro</button></li>
                                    <li><button type="submit" name="waluta" value="GBP" class="dropdown-item">GBP - Funt Szterling</button></li>
                                    <li><button type="submit" name="waluta" value="CHF" class="dropdown-item">CHF - Frank Szwajcarski</button></li>
                                </ul>
                            </li>
                        </ul>
                    </form>


                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>

    <main class="flex-grow-1">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="border-top footer text-muted bg-light mt-auto">
        <div class="container py-3 text-center">
            Made by <b>Piotr Ceberek</b> and <b>Rafał Ciereszko</b> <i class="bi bi-emoji-smile"></i>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
